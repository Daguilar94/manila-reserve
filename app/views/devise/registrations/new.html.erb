<h1 class="text-success text-center font-weight-bold mt-4">Sign up</h1>

<div class="container-fluid">


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row justify-content-center justify-content-center">
    <div class="col-xs-12 col-sm-4">
      <div class="field form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <div class="field form-group">
        <%= f.label :lastName %><br />
        <%= f.text_field :lastName, autofocus: true, autocomplete: "last name", class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-2">
      <div class="field form-group">
        <%= f.label :age %>
        <%= f.number_field :age, autofocus: true, autocomplete: "age", class: "form-control" %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-3">
      <div class="field form-group">
        <%= f.label :personalId %><br />
        <%= f.text_field :personalId, autofocus: true, autocomplete: "age", class: "form-control" %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-3">
      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-4">
      <div class="field form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>
    </div>
  </div>
</div>
<div class="row justify-content-center form-group">
  <div class="actions text-center">
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>
</div>
<% end %>
<div class="text-center mt-2">
  <%= link_to "Log in", new_session_path(resource_name), class: "text-muted" %>
</div>

<h1 class="text-success text-center font-weight-bold mt-4">Edit <%= resource_name.to_s.humanize %></h1>
<div class="container-fluid">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<!-- <%= devise_error_messages! %> -->

<div class="row justify-content-center justify-content-center">
  <div class="col-xs-12 col-md-4">
    <div class="field form-group">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control #{input_status_class(resource, :name)}" %>
      <%= invalid_msg(resource, :name) if is_invalid?(resource, :name) %>
    </div>
  </div>
  <div class="col-xs-12 col-md-4">
    <div class="field form-group">
      <%= f.label :lastName %>
      <%= f.text_field :lastName, autofocus: true, autocomplete: "last name", class: "form-control #{input_status_class(resource, :lastName)}" %>
      <%= invalid_msg(resource, :lastName) if is_invalid?(resource, :lastName) %>
    </div>
  </div>
</div>

<div class="row justify-content-center justify-content-center">
  <div class="col-xs-12 col-md-4">
    <div class="field form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control #{input_status_class(resource, :email)}" %>
      <%= invalid_msg(resource, :email) if is_invalid?(resource, :email) %>
    </div>
  </div>
  <div class="col-xs-12 col-md-4">
    <div class="field form-group">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: "off", class: "form-control #{input_status_class(resource, :current_password)}" %>
      <%= invalid_msg(resource, :current_password) if is_invalid?(resource, :current_password) %>
    </div>
  </div>
</div>

<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
<% end %>

<div class="row justify-content-center justify-content-center">
  <div class="col-xs-12 col-md-4">
    <div class="field form-group">
      <%= f.label :password %> <i>(Only if you want to change it)</i>
      <%= f.password_field :password, autofocus: true, autocomplete: "email", class: "form-control #{input_status_class(resource, :password)}" %>
      <% if @minimum_password_length %>
      <em class="text-muted">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= invalid_msg(resource, :password) if is_invalid?(resource, :password) %>
    </div>
  </div>
  <div class="col-xs-12 col-md-4">
    <div class="field form-group">
      <%= f.label :password_confirmation %> <i>(Only if you want to change it)</i>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control #{input_status_class(resource, :password_confirmation)}" %>
      <%= invalid_msg(resource, :password_confirmation) if is_invalid?(resource, :password_confirmation) %>
    </div>
  </div>
</div>

<div class="row justify-content-center form-group">
  <div class="actions text-center">
    <%= f.submit "Update", class: "btn btn-success" %>
  </div>
</div>
<% end %>
<!-- <h3>Cancel my account</h3>
<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p> -->
</div>

<div class="text-center mt-2">
  <%= link_to "Back", :back, class: "text-muted" %>
</div>

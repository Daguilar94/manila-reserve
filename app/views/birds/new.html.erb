<h1 class="text-center my-3">Create Specie</h1>

<% if flash[:notice] %>
  <% flash[:notice].each do |error| %>
    <p class="text-center text-danger my-1"><%= error %> </p>
  <%end%>
<% end %>

<div class=" container">
  <div class="row justify-content-center">
    <div class="col-11 col-md-6">
      <%= form_for @bird, remote: true do |f|%>
      <div class="form-group">
        <%= f.label :popular_name %>
        <%= f.text_field :popular_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :cientific_name %>
        <%= f.text_field :cientific_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :cientific_name %>
        <%= f.file_field :profile_image, class: "form-control" %>
      </div>
      <div class="text-center mt-4">
        <%= link_to "Cancel", birds_path, class:"btn btn-outline-secondary" %>
        <%=f.submit 'Create', class: "btn btn-outline-success"%>
      </div>
      <% end %>
    </div>
  </div>
</div>
